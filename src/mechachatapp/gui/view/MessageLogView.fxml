      </HBox>
   </bottom>
   <center>
      <ListView fx:id="lstMessages" prefHeight="432.0" prefWidth="336.0" BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </ListView>
   </center>
</BorderPane>
