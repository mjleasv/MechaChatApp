<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="450.0" prefWidth="350.0" spacing="5.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="mechachatapp.gui.controller.CreateUserViewController">
   <children>
      <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Create user" textAlignment="CENTER" wrapText="true">
         <font>
            <Font name="System Bold" size="35.0" />
         </font>
         <VBox.margin>
            <Insets bottom="15.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="txtUserName" promptText="User name" />
      <Label fx:id="txtUserNameError" maxWidth="1.7976931348623157E308" textFill="RED">
         <VBox.margin>
            <Insets bottom="15.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="txtEmail" promptText="Email" />
      <Label fx:id="txtEmailError" maxWidth="1.7976931348623157E308" textFill="RED">
         <VBox.margin>
            <Insets bottom="15.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="txtPassword" promptText="Password" />
      <Label fx:id="txtPasswordError" maxWidth="1.7976931348623157E308" textFill="RED">
         <VBox.margin>
            <Insets bottom="15.0" />
         </VBox.margin>
      </Label>
      <TextField fx:id="txtPasswordAgain" promptText="Password again" />
      <Label fx:id="txtPasswordAgainError" maxWidth="1.7976931348623157E308" textFill="RED">
         <VBox.margin>
            <Insets bottom="15.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="BOTTOM_CENTER" spacing="15.0" VBox.vgrow="ALWAYS">
         <children>
            <Button cancelButton="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Cancel" HBox.hgrow="ALWAYS" />
            <Button alignment="CENTER" defaultButton="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleCreateUser" text="Create" HBox.hgrow="ALWAYS" />
         </children>
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
